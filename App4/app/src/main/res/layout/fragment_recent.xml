<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomePage.HomeFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/search_bar_background"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextText"
                        android:background="@drawable/search_bar_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Search Places"
                        android:inputType="text"
                        android:textColor="#888888"
                        android:textColorHint="#888888"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/vertical_line" />

                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="20dp"
                        app:srcCompat="@drawable/filter" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:paddingTop="5dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="20dp"
                    app:srcCompat="@drawable/profile_pic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sort By"
                    android:textColor="#2F2F2F"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGoToSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View All"
                    android:textAlignment="viewEnd"
                    android:textColor="#888888"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="@color/material_dynamic_neutral90"
                    app:cardCornerRadius="30dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn1Recent"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@drawable/background"
                                android:padding="10dp"
                                android:text="Recent"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:cornerRadius="10dp"
                                app:strokeColor="#3F51B5" />


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnLatestFag2"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/search_bar_background"
                                android:padding="10dp"
                                android:text="liked"
                                android:textColor="#888888"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:cornerRadius="10dp"
                                app:strokeColor="#3F51B5" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnNearByFag2"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/search_bar_background"
                                android:padding="10dp"
                                android:text="oldest"
                                android:textColor="#888888"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:cornerRadius="10dp"
                                app:strokeColor="#3F51B5" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnNearBy1Fag2"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/search_bar_background"
                                android:padding="10dp"
                                android:text="other"
                                android:textColor="#888888"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:cornerRadius="10dp"
                                app:strokeColor="#3F51B5" />

                        </LinearLayout>
                    </HorizontalScrollView>
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:id="@+id/flFragment2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent">

                </FrameLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>